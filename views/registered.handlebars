<div class="jumbotron text-center">
    <h1 class="display-3">You are Registered!</h1>
    <p class="lead"></p>
    <hr class="m-y-md">
    <p>View your employer profile:</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{#employer}}
                <p>Name: {{name}}</p>
                <p>Phone number: {{phone}}</p>
                <p>Email: {{email}}</p>
                <p>Street: {{street}}</p>
                <p>City: {{city}}</p>
                <p>Zipcode: {{zipcode}}</p>
                <p>Availability:
                    {{#unless availability}}You are not currently looking for employees{{/unless}}
                    {{#if availability}}You are currently looking for employees.{{/if}}
                </p>
            {{/employer}}
        </div>
    </div>
</div>